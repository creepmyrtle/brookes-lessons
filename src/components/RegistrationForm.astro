---
interface Props {
  variant?: 'home' | 'contact';
}

const { variant = 'home' } = Astro.props;
const isContact = variant === 'contact';
---

{isContact ? (
  <form>
    <p style="font-size: 14px; color: var(--text-dim); margin-bottom: 24px; line-height: 1.7;">
      Only your first name and email are required, but the more you share, the better — Brooke uses this info to design a personalized lesson plan just for you.
    </p>
    <div class="form-grid">
      <div class="form-group">
        <label>Student First Name <span class="required">*</span></label>
        <input type="text" placeholder="First name" required />
      </div>
      <div class="form-group">
        <label>Student Last Name</label>
        <input type="text" placeholder="Last name" />
      </div>
      <div class="form-group full">
        <label>Email <span class="required">*</span></label>
        <input type="email" placeholder="email@example.com" required />
      </div>
      <div class="form-group full">
        <label>Address</label>
        <input type="text" placeholder="Street, City, State, Zip" />
      </div>
      <div class="form-group">
        <label>Phone</label>
        <input type="tel" placeholder="(555) 555-5555" />
      </div>
      <div class="form-group">
        <label>Student's Age</label>
        <input type="text" placeholder="Age" />
      </div>
      <div class="form-group">
        <label>Lesson Type</label>
        <select>
          <option value="">Select...</option>
          <option>Acoustic Guitar</option>
          <option>Electric Guitar</option>
          <option>Voice</option>
          <option>Ukulele</option>
        </select>
      </div>
      <div class="form-group">
        <label>Skill Level</label>
        <input type="text" placeholder="Beginner, intermediate…" />
      </div>
      <div class="form-group">
        <label>Guitar Type & Brand</label>
        <input type="text" placeholder="e.g., Fender acoustic" />
      </div>
      <div class="form-group full">
        <label>Favorite Music / Song</label>
        <input type="text" placeholder="What do you love to listen to?" />
      </div>
      <div class="form-group">
        <label>Parent/Guardian Name</label>
        <input type="text" placeholder="If applicable" />
      </div>
      <div class="form-group">
        <label>Preferred Day/Time</label>
        <input type="text" placeholder="e.g., Tuesdays 4pm" />
      </div>
      <div class="form-group full">
        <label>How Did You Hear About Me?</label>
        <input type="text" />
      </div>
      <div class="form-group full">
        <label>Comments / Preferred Pronouns</label>
        <textarea placeholder="Anything else?"></textarea>
      </div>
    </div>
    <div class="form-submit">
      <button type="submit" class="btn btn-primary" style="padding: 14px 48px;">Submit Registration &rarr;</button>
    </div>
  </form>
) : (
  <form>
    <p style="font-size: 14px; color: var(--text-dim); margin-bottom: 24px; line-height: 1.7;">
      Only your first name and email are required, but the more you share, the better — Brooke uses this info to design a personalized lesson plan just for you.
    </p>
    <div class="form-grid">
      <div class="form-group">
        <label>Student First Name <span class="required">*</span></label>
        <input type="text" placeholder="First name" required />
      </div>
      <div class="form-group">
        <label>Student Last Name</label>
        <input type="text" placeholder="Last name" />
      </div>
      <div class="form-group full">
        <label>Email <span class="required">*</span></label>
        <input type="email" placeholder="email@example.com" required />
      </div>
      <div class="form-group full">
        <label>Address (Street, City, State, Zip)</label>
        <input type="text" placeholder="Full address" />
      </div>
      <div class="form-group">
        <label>Phone</label>
        <input type="tel" placeholder="(555) 555-5555" />
      </div>
      <div class="form-group">
        <label>Student's Age</label>
        <input type="text" placeholder="Age" />
      </div>
      <div class="form-group">
        <label>Lesson Type</label>
        <select>
          <option value="">Select...</option>
          <option>Acoustic Guitar Lessons</option>
          <option>Electric Guitar Lessons</option>
          <option>Voice Lessons</option>
          <option>Ukulele Lessons</option>
        </select>
      </div>
      <div class="form-group">
        <label>Skill Level</label>
        <input type="text" placeholder="Beginner, intermediate, etc." />
      </div>
      <div class="form-group">
        <label>Guitar Type & Brand</label>
        <input type="text" placeholder="e.g., Fender acoustic" />
      </div>
      <div class="form-group full">
        <label>Favorite Music Genre / Song</label>
        <input type="text" placeholder="What music do you love?" />
      </div>
      <div class="form-group">
        <label>Parent/Guardian Name</label>
        <input type="text" placeholder="If applicable" />
      </div>
      <div class="form-group">
        <label>Preferred Day/Time</label>
        <input type="text" placeholder="e.g., Tuesdays at 4pm" />
      </div>
      <div class="form-group full">
        <label>How Did You Hear About Me?</label>
        <input type="text" placeholder="Google, referral, social media, etc." />
      </div>
      <div class="form-group full">
        <label>Comments / Preferred Pronouns</label>
        <textarea placeholder="Anything else you'd like me to know?"></textarea>
      </div>
    </div>
    <div class="form-submit">
      <button type="submit" class="btn btn-primary" style="padding: 14px 48px;">Submit Registration &rarr;</button>
    </div>
  </form>
)}
